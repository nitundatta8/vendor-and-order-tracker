@{
  Layout = "_Layout";
}
@using VendorAndOrderTracker.Models;
<h1>Vendor List</h1>

  @if (@Model.Count == 0)
  {
    <h3>No vendors have been added yet!</h3>
  } 

  @foreach (Vendor vendor in Model)
  {
    <h3><a href='/vendors/@vendor.Id'>Name: @vendor.VendorName Describtion: @vendor.Description</a></h3> 
  }
  <form action="/vendors/delete" method="post">
    <button class="btn btn-success" type="submit">Clear All</button>
    <a href="/"><button class="btn btn-success" type="button">Back</button></a>
  </form>
  
  