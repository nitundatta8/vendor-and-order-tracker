@{
  Layout = "_Layout";
}

<h1>Add a Vendor</h1>


<form action="/vendors" method="post">
  <label for="vendorName">Vendor Name</label>
  <input id="vendorName" name="vendorName" placeholder="Vendor name"><br>
  <label for="vendorDescription">Vendor Description</label>
  <input id="vendorDescription" name="vendorDescription" placeholder="vendor Description"><br>
  <button class="btn btn-success" type="submit">Add</button>
  <a href="/"><button class="btn btn-success" type="button">Back</button></a>
</form>