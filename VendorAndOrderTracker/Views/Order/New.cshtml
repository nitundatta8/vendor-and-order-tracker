@{
  Layout = "_Layout";
}
@using VendorAndOrderTracker.Models;
<h1>Add a order @Model.VendorName</h1>
              
<form action="/vendors/@Model.Id/order" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="orderTitle">Order Title</label>
  <input id="orderTitle" name="orderTitle" type="text">
  <br>
  <label for="orderDescription">Order Description</label>
  <input id="orderDescription" name="orderDescription" type="text">
  <br>
  <label for="orderPrice">Price</label>
  <input id="orderPrice" name="orderPrice" type="number">
  <br>
  <label for="orderDate">Date</label>
  <input id="orderDate" name="orderDate" type="text" placeholder="5-22-2020">
  <br>
  <button class="btn btn-success" type='submit'>Add Order</button>
</form>
